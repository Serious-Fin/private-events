<h2><%= @user.name %>'s events</h2>

<% @user.events.all.each do |event| %>
  <div>
    Date: <%= event.date %> <br \>
    Location: <%= event.location %>
  </div>
  <hr>
<% end %>

<p>Attended events:</p>
<% @user.attended_events.each do |event| %>
  Date: <%= event.date %> | Location: <%= event.location %><br />
  <hr>
<% end %>